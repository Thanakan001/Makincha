<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- พื้นหลังสีเหลืองไล่เฉด -->
    <gradient
        android:startColor="#FFE082"
        android:endColor="#FFCA28"
        android:angle="90"/>

    <!-- มุมโค้งมน -->
    <corners android:radius="16dp"/>

    <!-- ขอบบางๆ -->
    <stroke
        android:width="1dp"
        android:color="#F9A825" />

    <!-- ระยะ padding -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
