<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- พื้นหลังสีขาว -->
    <solid android:color="#FFFFFF" />

    <!-- ขอบมน -->
    <corners android:radius="12dp" />

    <!-- เส้นขอบสีเทาอ่อน -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- เงาเบาๆ รอบกล่อง -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
