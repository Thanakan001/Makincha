<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- พื้นหลังสีขาว -->
    <solid android:color="#FFFFFF" />

    <!-- ขอบโค้ง -->
    <corners android:radius="16dp" />

    <!-- เงา/ขอบบาง ๆ -->
    <stroke
        android:width="1dp"
        android:color="#22000000" />

    <!-- แพดดิ้งภายในการ์ด -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
</shape>
