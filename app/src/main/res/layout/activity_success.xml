<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_success"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="สั่งซื้อสำเร็จ!"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/txtOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เลขคำสั่งซื้อ: -"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="รายการสินค้า"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSuccessProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ยอดรวมทั้งหมด:"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/txtSuccessTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="฿ 0.00"
                    android:layout_marginBottom="20dp" />

                <Button
                    android:id="@+id/btnSuccessHistory"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="หน้าประวัติคำสั่งซื้อ"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_rounded_yellow"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnSuccessHome"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="กลับหน้าหลัก"
                    android:background="@drawable/btn_rounded_yellow"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
